@model Category


<form method="post">

    <div class="border p-2  mt-5">
        <div class="row pb-2">
            <h2 class="text-black"> <i class="bi bi-person-plus-fill"></i> &nbsp; Add Category</h2>
            <hr />
        </div>

        <div class=" mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class=" mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
      <span asp-validation-summary="All"></span>
        <div class="text-end">
            <button type="submit" class="btn btn-primary" style="width:100px">Add </button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-warning" style="width:200px">Back to List</a>
        </div>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



